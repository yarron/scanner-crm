{
  "name": "scanner-crm",
  "version": "1.0.0",
  "description": "Scanner track number for crm",
  "main": "index.js",
  "engines": {
    "node": ">=8.0",
    "npm": ">=6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snphq/react-starter-boilerplate"
  },
  "keywords": [
    "starter",
    "boilerpate",
    "universal",
    "react",
    "redux",
    "react router v4",
    "express",
    "webpack v4",
    "es6",
    "hot reloading",
    "babel",
    "postcss",
    "performance optimizing"
  ],
  "author": "snp <hello@snp.agency> (https://snp.agency)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/snphq/react-starter-boilerplateissues"
  },
  "homepage": "https://github.com/snphq/react-starter-boilerplate",
  "scripts": {
    "start": "better-npm-run start",
    "start:production": "yarn build && yarn start:prod",
    "start:prod": "better-npm-run start:prod",
    "build": "yarn clean:build && better-npm-run build",
    "start_ssr": "better-npm-run start_ssr",
    "start_ssr:production": "yarn build && yarn start_ssr:prod",
    "start_ssr:prod": "better-npm-run start_ssr:prod",
    "build_ssr": "yarn clean:build && better-npm-run build_ssr",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "clean:all": "yarn clean:build",
    "clean:build": "better-npm-run clean:build"
  },
  "betterScripts": {
    "start": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start_ssr": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "NODE_SSR": true
      }
    },
    "start:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start_ssr:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "NODE_SSR": true
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build_ssr": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_SSR": true
      }
    },
    "lint:js": {
      "command": "eslint ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint \"./src/**/*.scss\" --syntax scss"
    },
    "clean:build": {
      "command": "rimraf ./public"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "transform-decorators-legacy",
      "lodash"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:lodash-fp/recommended"
    ],
    "plugins": [
      "react",
      "jsx-a11y",
      "import",
      "lodash-fp"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "react/no-danger": 0,
      "global-require": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "no-debugger": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "specialLink": [
            "to"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "function-paren-newline": 0
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DISABLE_SSR__": true,
      "__DEV__": true,
      "webpackIsomorphicTools": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "tools/webpack/config.babel.js"
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 2 versions",
    "safari >= 7",
    "ie >= 11"
  ],
  "dependencies": {
    "@material-ui/core": "^1.2.2",
    "@material-ui/icons": "^1.1.0",
    "axios": "0.17.1",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chalk": "2.3.0",
    "compression": "1.7.1",
    "eslint-import-resolver-webpack": "^0.8.4",
    "express": "4.16.2",
    "helmet": "3.9.0",
    "history": "^4.7.2",
    "hpp": "^0.2.2",
    "lodash": "^4.17.4",
    "morgan": "1.9.0",
    "opn": "^5.1.0",
    "prop-types": "^15.6.2",
    "quagga": "^0.12.1",
    "react": "^16.4.1",
    "react-css-modules": "^4.7.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "3.1.3",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "5.0.0-alpha.8",
    "redbox-react": "^1.5.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "2.4.5",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack-isomorphic-tools": "^3.0.5"
  },
  "devDependencies": {
    "autoprefixer": "7.2.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.0.3",
    "babel-jest": "21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-lodash": "3.3.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-block-scoping": "^6.26.0",
    "babel-plugin-transform-es2015-constants": "^6.1.4",
    "babel-plugin-transform-remove-console": "^6.8.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.1.0",
    "compression-webpack-plugin": "^1.0.1",
    "coveralls": "3.0.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.7",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "eslint": "4.13.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.6",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.4.2",
    "nock": "9.1.4",
    "node-sass": "4.7.2",
    "nodemon": "1.12.5",
    "postcss": "6.0.14",
    "postcss-loader": "2.0.9",
    "raf": "3.4.0",
    "redux-mock-store": "^1.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.3",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "url-loader": "0.6.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "2.21.0",
    "webpack-sources": "1.0.1"
  }
}
